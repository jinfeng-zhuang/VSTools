#########################################################################
# Source & Target
#########################################################################

TARGET = avmips_event

OBJS   = avmips_event.o				\
	 mem_map.o				\
	 pman.o					\
	 Trid_Util_CPUComm_Init.o		\
	 Trid_Util_CPUComm_InstallRoutine.o	\
	 Trid_Util_CPUComm_Call.o		\
	 Trid_Util_CRC32.o			\
	 cpu_comm_is_ready.o

#########################################################################
# Toolchain
#########################################################################

export PATH := /opt/p111/armv7a/bin:/opt/cross-arm/linaro-64/bin:$(PATH)

CC      = armv7a-cros-linux-gnueabi-gcc
CFLAGS  = -I./include -Wall

#########################################################################
# Rule
#########################################################################

.PHONY:all 
.PHONY:clean 

all : $(TARGET)

$(TARGET): $(OBJS)
	$(CC) -o $@ $^

%.o:%.c
	$(CC) -o $@ -c $< $(CFLAGS)

%.d:%.c
	@set -e; rm -f $@; $(CC) -MM $< > $@.$$$$; \
	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	rm -f $@.$$$$

-include $(OBJS:.o=.d)

clean:
	rm -f $(TARGETS) *.o *.d *.d.*

