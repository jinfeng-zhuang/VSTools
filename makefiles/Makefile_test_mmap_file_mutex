#########################################################################
# Source & Target
#########################################################################

TARGET = test_mmap_mutex

OBJS   = test_mmap_mutex.o			\
	 mem_map.o				\
	 g_comm_fd.o				\
	 pman.o					\
	 hexdump.o

#########################################################################
# Toolchain
#########################################################################

export PATH := /opt/p111/armv7a/bin:/opt/cross-arm/linaro-64/bin:$(PATH)

CC      = armv7a-cros-linux-gnueabi-gcc
CFLAGS  = -I./include -I ~/API/include
LDFLAGS = -lpthread

#########################################################################
# Rule
#########################################################################

.PHONY:all 
.PHONY:clean 

all : $(TARGET)

$(TARGET): $(OBJS)
	$(CC) -o $@ $^ $(LDFLAGS)

%.o:%.c
	$(CC) -o $@ -c $< $(CFLAGS)

%.d:%.c
	@set -e; rm -f $@; $(CC) -MM $< > $@.$$$$; \
	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	rm -f $@.$$$$

-include $(OBJS:.o=.d)

clean:
	rm -f $(TARGETS) *.o *.d *.d.*

